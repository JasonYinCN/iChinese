<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TranslateFragment"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background">

        <com.example.jason.ichinese.CustomCtrl.EditTextWithClearBtn
            android:id="@+id/userInput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:minHeight="50dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            android:textSize="18sp"
            android:background="@drawable/translate_textedit_bg"
            android:textCursorDrawable="@null"
            android:hint="@string/trans_edit_notify"
            android:imeOptions="actionSearch"
            app:layout_constraintBottom_toTopOf="@+id/textViewTransRes"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:lineColorEt="@color/colorLineEdit"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dailyImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitEnd"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
